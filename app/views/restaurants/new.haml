= form_for :restaurant, url: restaurants_path do |f|
  - if @post.errors.any?
    #errorExplanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited
        this post from being saved:
      %ul
        - @restaurant.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.submit
= link_to 'Back', restaurants_path